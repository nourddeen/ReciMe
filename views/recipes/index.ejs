<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titan+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <nav class="nav">
        <div class="container">
            <div class="logo">
                <a href="/recipes">ReciMe</a>
            </div>
            <div id="mainListDiv" class="main_list">
                <ul class="navlinks">
                    <% if( isLoggedIn ) {%>
                        <p class="recipe-welcome">Hello <%= username %></p>
                        <u class="logout-button"><a class="logout-button" href="/users/logout">logout</a></u>
                       <% } else { %>
                        <li><a href="/users/new">Sign up</a></li>
                        <li><a href="/users/login">Login</a></li>
                            <% } %>
                </ul>
            </div>
            <span class="navTrigger">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </div>
    </nav>
    <h1> ReciMe </h1>
    <% if(recipes.length===0) {%>
        <h2 class="no-recipes">There are no recipes yet!</h2>
        <% } else { %>
            <ul class="recipes">
                <% recipes.forEach((recipe)=>{ %>
                    <li>
                        <div class="recipe-div">
                            <h2 class="recipe-name"><%= recipe.name %></h2>
                            <a href="/recipes/<%=recipe._id%>"><img src="<%= recipe.image %>" alt="Recipe image"></a>
                        </div>
                        
                    </li>
                    <% })} %>
            </ul>
            <div class="index-buttons">
            <% if( isLoggedIn ) {%>
                <a href="/recipes/new"><button class="recipe-button-1">Create a recipe now!</button></a>
            <% } %>
                

            <% if( isLoggedIn ) {%>
                <a href="/users/logout"><button class="recipe-button-2">logout</button></a>
                <% } %>
            </div>
</body>

</html>